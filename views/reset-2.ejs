<%- include('./includes/Header') %>
    <div class=" mt-5 w-full justify-center flex ">
        <form action="/updatePassword" method="POST"
            class="flex flex-col gap-4 bg-gray-200 p-10 pl-22 pr-22 rounded-lg">
            <div class="flex flex-col gap-1">
                <label class="font-bold text-xl" for="new password">New Password</label>
                <input class="p-1 pl-3 border-[1.5px] rounded-md" id="new password" type="text" name="newPassword"
                    placeholder="enter new password">
            </div>
            <input type="hidden" value=<%= token %> name='token'>
            <div class="ml-auto">
                <button class="
                  bg-black p-2 pl-3 pr-3 font-semibold cursor-pointer text-white rounded-md">
                    Update password
                </button>
            </div>
        </form>
    </div>
    </body>

    </html>